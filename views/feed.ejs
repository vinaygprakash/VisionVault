<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="x-icon" href="https://static-00.iconduck.com/assets.00/pinterest-icon-2048x2048-os3lysf9.png">
    <title>Pinterest-clone</title>
    <link rel="stylesheet" href="./stylesheets/feed.css">
</head>
<body>
    <% include ./partials/header.ejs %>
    <div id="cards" style="display:flex; flex-wrap:wrap; gap: 10px; margin-left:10px; margin-right:10px; padding-left:10px; padding-right:10px; margin-top:30px">
        <% post.forEach(function(elm){ %>
          <div id="card">
            <div id="image">
              <img src="/images/uploads/<%= elm.image %>" style="width: 100%; height:100%; object-fit:cover;">
            </div>
            <span style="font-weight:bold; font-size:larger; margin-left:10px;margin-top:5px; margin-bottom:2px"><%= elm.title %></span>
            <span style=" margin-left:10px;color:rgb(169, 168, 168)"><%= elm.user.username %></span>
          </div>
        <% }) %>
      </div>
</body>
</html>